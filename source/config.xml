<?xml version='1.0' encoding='utf-8'?>
<widget 
	xmlns="http://www.w3.org/ns/widgets" 
	id="https://addons.opera.com/extensions/details/the-reminder/" 
	defaultlocale="en" 
	viewmodes="minimized" 
	version="1.1">
	
	<name short="Reminder">
		The Reminder
	</name>
	<description xml:lang="en">
		Displays notes in your Opera Speed Dial to help you remember stuff.
	</description>
	<author email="thewebdev@myopera.com">
		M Shabeer Ali
	</author>
	<license href="http://www.gnu.org/licenses/gpl-3.0.html">
		Licensed under GPL v3.0
	</license>
	<!-- original icon credit - http://dakirby309.deviantart.com/ -->
	<!-- original icon license - http://creativecommons.org/licenses/by/3.0/ -->
  	<icon src="pix/icon-64.png"/>
	<feature name="opera:speeddial" required="true">
		<!-- Link to open when the Speed Dial is clicked -->
		<param name="url" value="http://whyquote.blogspot.com"/>
	</feature> 
	<preference name="showfor" value="5" readonly="true"/>
	<preference name="count" value="0"/>
	<update-description href="https://extension-updates.opera.com/api/w3c-wd1/update/31943cdc-7002-41bd-a5fa-acbbfb8d18bd/"/>	
</widget>
